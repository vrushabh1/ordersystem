
<div class="col-md-6 col-md-offset-3 bg-warning justify-content-center">
<h3>Login</h3>
<div class="ibox-content">
  <h3 style="margin-bottom: 40px;">Welcome to OMS</h3>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, :required=>true, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, :required=>true, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
